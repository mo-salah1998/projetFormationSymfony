{% extends 'base.html.twig' %}


{% block title %}Matiere{% endblock %}

{% block body %}


<body class="theme-cyan">

<!-- Page Loader -->
<div class="page-loader-wrapper">
    <div class="loader">
        <div class="m-t-30"><img src="http://www.wrraptheme.com/templates/lucid/hospital/assets/images/logo-icon.svg"
                                 width="48" height="48" alt="Lucid"></div>
        <p>Please wait...</p>
    </div>
</div>


<div id="wrapper">

    {{ include('index/navbar.html.twig') }}
    <!-- Overlay For Sidebars -->
    {{ include('index/sidebare.html.twig') }}

    <div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-12">
                        <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i
                                        class="fa fa-arrow-left"></i></a> Dashboard</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html"><i class="icon-home"></i></a></li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-4 col-sm-12 text-right">
                        <div class="bh_chart hidden-xs">
                            <div class="float-left m-r-15">
                                <small>Visitors</small>
                                <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                            </div>
                            <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
                        </div>
                        <div class="bh_chart hidden-sm">
                            <div class="float-left m-r-15">
                                <small>Visits</small>
                                <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                            </div>
                            <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
                        </div>
                        <div class="bh_chart hidden-sm">
                            <div class="float-left m-r-15">
                                <small>Chats</small>
                                <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                            </div>
                            <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card">

                    <h2>Matiere</h2>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ matiere.id }}</td>
                        </tr>
                        <tr>
                            <th>NomM</th>
                            <td>{{ matiere.nomM }}</td>
                        </tr>
                        <tr>
                            <th>PrixM</th>
                            <td>{{ matiere.prixM }}</td>
                        </tr>
                        <tr>
                            <th>ImgSrc</th>

                            <td>
                                <img src="{{ asset('/uploads/'~ matiere.imgSrc) }}" alt="Image" width="300">
                            </td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_index') }}">back to list</a>

                    <a href="{{ path('index_matiere_edit', {'id': matiere.id}) }}">edit</a>

                    {{ include('index/delete_form.html.twig') }}
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
